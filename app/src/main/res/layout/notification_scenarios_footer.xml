<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/footer"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_alignParentBottom="true"
  android:background="@drawable/bg_ripple_footer"
  android:orientation="vertical"
>

  <View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen1dip"
    android:background="@color/footerDivider"
  />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/notifications_footer_text"
    style="@style/Widget.TextView.Push.FooterText"
  />

</LinearLayout>

